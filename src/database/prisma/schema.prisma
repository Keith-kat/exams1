// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exam {
  id               Int                @id @default(autoincrement())
  name             String
  duration         Int
  ExamQuestion     ExamQuestion[]
  StudentExamScore StudentExamScore[]
}

model Question {
  id            Int             @id @default(autoincrement())
  text          String
  answers       String[]
  type          QuestionType
  scoring       QuestionScoring
  correctAnswer String
  ExamQuestion  ExamQuestion[]
}

model ExamQuestion {
  id                        Int                         @id @default(autoincrement())
  exam                      Exam                        @relation(fields: [examId], references: [id])
  examId                    Int
  question                  Question                    @relation(fields: [questionId], references: [id])
  questionId                Int
  StudentExamQuestionAnswer StudentExamQuestionAnswer[]
}

model Student {
  id               Int                @id @default(autoincrement())
  name             String
  age              Int
  StudentExamScore StudentExamScore[]
}

model StudentExamQuestionAnswer {
  id             Int          @id @default(autoincrement())
  examQuestionId Int
  examQuestion   ExamQuestion @relation(fields: [examQuestionId], references: [id])
  answerText     String
}

model StudentExamScore {
  id        Int     @id @default(autoincrement())
  examId    Int
  exam      Exam    @relation(fields: [examId], references: [id])
  studentId Int
  student   Student @relation(fields: [studentId], references: [id])
  score     Int
}

enum QuestionType {
  MULTIPLE_CHOICE
  INPIT_TEXT
}

enum QuestionScoring {
  AUTOMATIC
  MANUAL
}
